<div class="mt-4">
    <h2 class="mb-4">Thêm chương trình khuyến mãi</h2>
    <form method="POST" action="" enctype="multipart/form-data" class="mt-10" id="discountForm">
        <div class="form-group">
            <label for="name">Tên chương trình khuyến mãi:</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="mt-3 row">
            <div class="form-group col">
                <label for="startDate">Ngày bắt đầu</label>
                <input type="text" class="date form-control" id="startDate" name="startDate" required>
            </div>

            <div class="form-group col">
                <label for="endDate">Ngày kết thúc</label>
                <input type="text" class="date form-control" id="endDate" name="endDate" required>
            </div>
        </div>

        <div class="form-group mt-3">
            <label for="type">Danh mục</label>
            <select name="type" id="type" class="form-select">
                {{#each type}}
                <option value="{{this.ID}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Thêm chương trình</button>
    </form>
</div>

<script>
    $(".date").datepicker({
        format: "dd/mm/yyyy",
    });

    document.getElementById("discountForm").addEventListener('submit', (event) => {
        let startDate = document.getElementById("startDate")
        let endDate = document.getElementById("endDate")

        if (startDate.value >= endDate.value) {
            event.preventDefault();

            startDate.style.border = '2px solid red'
            endDate.style.border = '2px solid red'

            alert('Ngày bắt đầu không được trễ hơn ngày kết thúc')
        }
    })
</script>